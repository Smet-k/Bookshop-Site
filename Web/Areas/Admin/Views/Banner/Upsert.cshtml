@model Banner
@{
    ViewData["Title"] = "Banner Editor";
    ViewData["ContMan"] = "active-page-nav";
}



<form method="post" enctype="multipart/form-data">
    @if (Model.Id != 0)
    {
        <input hidden asp-for="Id" value="@Model.Id" />
    }
    <input asp-for="@Model.ImageUrl" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                @(Model.Id != 0 ? "Update" : "Create") Banner
            </h2>
            <hr />
        </div>
        <div class="col-2">
            <img src="@Model.ImageUrl" class="w-100" alt=""/>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="ImageUrl" class="p-0"></label>
            <input type="file" name="file" asp-for="ImageUrl"
                   class="form-control">
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                @if (Model.Id != 0)
                {
                    <button type="submit"
                            class="btn btn-primary form-control">
                        Update
                    </button>
                }
                else
                {
                    <button type="submit"
                            class="btn btn-primary form-control">
                        Create
                    </button>
                }
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Index"
                   class="btn btn-outline-secondary form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}